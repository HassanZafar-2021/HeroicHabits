{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Ensures ES Modules syntax is used
    "moduleResolution": "node",
    "esModuleInterop": true, // Ensures compatibility for common modules
    "strict": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
